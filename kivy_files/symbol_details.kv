<SymbolDetailsScreen>:
    BoxLayout:
        BackButton:
            size_hint_x: .15
            orientation: "horizontal"
            on_press:
                root.manager.transition.direction = "right"
                root.manager.transition.duration = 0.5
                root.manager.current = "symbols_screen"

        BoxLayout:
            orientation: 'vertical'
            canvas:
                Color:
                    rgb: 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            Button:
                background_down: ''
                background_normal: ''
                background_color: 0, 0, 0, 1
                color: 1, 1, 1, 1
                text: root.current_symbol
                size_hint_y: .1
                font_size: 30

            GridLayout:
                id: gallery
                size_hint_x: 1
                size_hint_y: .6
                cols: 2
                rows: 2

                Image:
                    id: img_1
                    source: root.source1
                Image:
                    id: img_2
                    source: root.source2
                Image:
                    id: img_3
                    source: root.source3
                Image:
                    id: img_4
                    source: root.source4

            CustomButton:
                text: 'Edit'
                size_hint_y: .1
                on_press:
                    root.open_paint()
            CustomButton:
                text: 'Previous'
                size_hint_y: .1
                on_press:
                    root.previous()
            CustomButton:
                text: 'Next'
                size_hint_y: .1
                on_press:
                    root.next()