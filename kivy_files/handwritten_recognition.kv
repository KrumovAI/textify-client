<LoadingPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    title: "Loading"
    background_color: (1, 1, 1, 1)
    color: (0, 0, 0, 1)

<HandwrittenRecognitionScreen>:
    BoxLayout:
        BackButton:
            size_hint_x: .15
            orientation: "horizontal"
            on_press:
                root.manager.transition.direction = "right"
                root.manager.transition.duration = 0.5
                root.manager.current = "menu"

        BoxLayout:
            orientation: "vertical"
            spacing: 3
            padding: 10
            canvas.before:
                Color:
                    rgba: 0.973, 0.973, 0.973, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            TextInput:
                id: result
                text: root.result
                multiline: True
                background_normal: ''
                background_active: ''
                input_type: "text"
                keyboard_suggestions: True
            CustomButton:
                text: "Choose File"
                size_hint_y: .10
                on_release:
                    root.show_load()
